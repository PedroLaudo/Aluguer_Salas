@model Aluguer_Salas.Models.Material

@{
    ViewData["Title"] = "Detalhes do Material";
}

<head>
    <link rel="stylesheet" href="~/css/MaterialBackOffice.css" asp-append-version="true" />
</head>

<div class="material-details-container">
    <h1>@ViewData["Title"]</h1>

    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.QuantidadeDisponivel)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.QuantidadeDisponivel)
        </dd>
    </dl>

    <div class="d-flex gap-2 mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>
