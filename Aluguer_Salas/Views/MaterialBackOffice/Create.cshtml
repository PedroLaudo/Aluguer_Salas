@model Aluguer_Salas.Models.Material

@{
    ViewData["Title"] = "Adicionar Novo Material";
}

<head>
    <link rel="stylesheet" href="~/css/MaterialBackOffice.css" asp-append-version="true" />
</head>

<div class="material-form-container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QuantidadeDisponivel" class="form-label"></label>
                    <input asp-for="QuantidadeDisponivel" class="form-control" type="number" min="0" />
                    <span asp-validation-for="QuantidadeDisponivel" class="text-danger"></span>
                </div>

                <div class="mb-3 d-flex gap-2">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}