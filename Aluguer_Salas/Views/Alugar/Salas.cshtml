@model IEnumerable<Aluguer_Salas.Models.Sala>
@using Microsoft.AspNetCore.Identity
@using Aluguer_Salas.Data
@inject SignInManager<Utilizador> SignInManager
@{
    ViewData["Title"] = "Salas para Reservar";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Nome da Sala</th>
                <th>Capacidade</th>
                <th>Descrição</th>
                <th>Disponibilidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sala in Model)
            {
                <tr>
                    <td>@sala.NomeSala</td>
                    <td>@sala.Capacidade</td>
                    <td>@sala.Descricao</td>
                    <td>
                        @if (sala.Disponivel)
                        {
                            <span class="badge bg-success">Disponível</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Indisponível</span>
                        }
                    </td>
                    <td>
                        @if (SignInManager.IsSignedIn(User) && sala.Disponivel)
                        {
                            // ALTERAÇÃO IMPORTANTE AQUI:
                            <a asp-controller="Alugar" asp-action="Aluguer" asp-route-id="@sala.Id" class="btn btn-primary btn-sm">Reservar</a>
                        }
                        else if (SignInManager.IsSignedIn(User) && !sala.Disponivel)
                        {
                            <button class="btn btn-secondary btn-sm" disabled>Indisponível</button>
                        }
                        @* Adicione um else para utilizadores não autenticados, se desejar *@
                        @*
                        else if (!SignInManager.IsSignedIn(User))
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Salas", "Alugar")" class="btn btn-info btn-sm">Login para Reservar</a>
                        }
                        *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>De momento, não existem salas para apresentar.</p>
}