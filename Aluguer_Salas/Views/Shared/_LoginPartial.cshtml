@using Microsoft.AspNetCore.Identity
@using Aluguer_Salas.Data 

@inject SignInManager<Utilizadores> SignInManager // <<< CORRIGIDO
@inject UserManager<Utilizadores> UserManager     // <<< CORRIGIDO

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @{
                // Busca o utilizador completo para acessar propriedades personalizadas
                var user = await UserManager.GetUserAsync(User);
                // Mostra a propriedade Nome se existir, senão fallback para UserName
                var userName = user?.Nome ?? user?.UserName;
            }
            @* Link para a página de gestão de conta *@
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Gerenciar Conta">Olá @userName!</a>
        </li>
        <li class="nav-item">
            @* Formulário para fazer logout via POST *@
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            @* Link para a página de registro *@
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Registar</a>
        </li>
        <li class="nav-item">
            @* Link para a página de login *@
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>