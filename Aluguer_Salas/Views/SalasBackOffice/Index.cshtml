@model IEnumerable<Aluguer_Salas.Models.Sala>
@{
    ViewData["Title"] = "Gestão de Salas";
}


<head>
    <link rel="stylesheet" href="~/css/SalasBackOffice.css" asp-append-version="true" />
</head>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="SalasBackoffice" asp-action="Create" class="btn btn-success">Criar Nova Sala</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().NomeSala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Capacidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Disponivel)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeSala)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @(item.Disponivel ? "Sim" : "Não")
                    </td>
                    <td>
                        <a asp-controller="SalasBackoffice" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                        <a asp-controller="SalasBackoffice" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                        <a asp-controller="SalasBackoffice" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Apagar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Nenhuma sala encontrada.</td>
            </tr>
        }
    </tbody>
</table>