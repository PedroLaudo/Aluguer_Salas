@page
@model Aluguer_Salas.Areas.Identity.Pages.Perfil.PerfilModel

@{
    ViewData["Title"] = "O Meu Perfil";
}

<h1>@ViewData["Title"]</h1>

@if (Model.CurrentUtilizador != null)
{
    <div class="card mb-4">
        <div class="card-header">
            Informações do Utilizador
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.CurrentUtilizador.Nome</h5>
            <p class="card-text"><strong>Email:</strong> @Model.CurrentUtilizador.Email</p>
            @if (!string.IsNullOrEmpty(Model.CurrentUtilizador.PhoneNumber))
            {
                <p class="card-text"><strong>Telefone:</strong> @Model.CurrentUtilizador.PhoneNumber</p>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">Não foi possível carregar os dados do utilizador.</div>
}

<h2>As Minhas Reservas</h2>

@if (Model.MinhasReservas != null && Model.MinhasReservas.Any())
{
    <form method="post">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Sala</th>
                    <th>Data</th>
                    <th>Hora de Início</th>
                    <th>Hora de Fim</th>
                    <th>Estado</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reserva in Model.MinhasReservas)
                {
                    <tr>
                        <td>@(reserva.Sala?.NomeSala ?? "Sala não encontrada")</td> @* Ou reserva.Sala?.Nome *@
                        <td>@reserva.Data.ToShortDateString()</td>
                        <td>@reserva.HoraInicio.ToShortTimeString()</td>
                        <td>@reserva.HoraFim.ToShortTimeString()</td>
                        <td>@Html.DisplayFor(modelItem => reserva.Status)</td>
                        <td>
                            @* Tag <td> corrigida - apenas uma aqui *@
                            @* A condição abaixo decide se mostra o botão para remover/cancelar *@
                            @* Exemplo: só mostrar se a reserva AINDA NÃO ocorreu e NÃO está num estado final como "Concluída" *@
                            @if (reserva.HoraInicio > DateTime.Now && (reserva.Status?.ToLower() != "concluída" && reserva.Status?.ToLower() != "cancelada_pelo_sistema_ou_outro_estado_final"))
                            {
                                <button type="submit"
                                        class="btn btn-danger btn-sm"
                                        asp-page-handler="CancelarReserva"
                                        asp-route-idReserva="@reserva.IdReserva" @* ESTA LINHA É CRUCIAL *@
                                        onclick="return confirm('Tem a certeza que deseja remover esta reserva? Esta ação não pode ser desfeita.');">
                                    Remover Reserva
                                </button>
                            }
                            else
                            {
                                @if (reserva.Status?.ToLower() == "cancelada")
                                {
                                    <span class="text-muted">Removida/Cancelada</span>
                                }
                                else if (reserva.Status?.ToLower() == "concluída")
                                {
                                    <span class="text-muted">Concluída</span>
                                }
                                else
                                {
                                    <span class="text-muted">Não Removível</span> @* Para reservas passadas ou em estados não removíveis *@
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
}
else
{
    <div class="alert alert-info">
        Não tem reservas efetuadas. Gostaria de <a asp-controller="Salas" asp-action="Index" class="alert-link">alugar uma sala</a>?
    </div>
}

<div class="mt-4">
    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-secondary">Gerir Conta</a>
</div>

@* Adicionar secção para mensagens temporárias (TempData) *@
@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @Html.Raw(TempData["StatusMessage"]) @* Usar Html.Raw se a mensagem puder ter HTML *@
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @Html.Raw(TempData["ErrorMessage"])
    </div>
}